{
	"name": "noemoji",
	"version": "0.1",
	"manifest_version": 2,
	
	"description": "特定のaltのimgタグをaltの中の文字列に置換するよ",
	
	"background": {
		"scripts": ["background.js"]
	},
	
	"permissions": [
		"tabs", "http://*/*", "https://*/*"
	],
	
	"content_scripts": [
    {
      "matches": [ "http://*/*" ],
      "js": [ "jquery.js", "rewrite.js" ]
    }
    ],
    
	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "noemoji"
	},
	"web_accessible_resources": ["jquery-1.10.1.min.map"]
}